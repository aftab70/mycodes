apt-get update -y
apt-get install default-jdk -y
groupadd tomcat
useradd -s /bin/false -g tomcat -d /opt/tomcat tomcat
cd /tmp
wget https://www-us.apache.org/dist/tomcat/tomcat-8/v8.5.39/bin/apache-tomcat-8.5.39.tar.gz
tar -xzvf apache-tomcat-8.5.39.tar.gz
mkdir /opt/tomcat
cp -ivr apache-tomcat-8.5.39/* /opt/tomcat
cd /opt/tomcat
chgrp -R tomcat /opt/tomcat
chmod -R g+r conf
chmod g+x conf
chown -R tomcat webapps/ work/ temp/ logs/
touch /etc/systemd/system/tomcat.service
wget -O /etc/systemd/system/tomcat.service https://raw.githubusercontent.com/aftab70/mycodes/master/tomcat_service
systemctl daemon-reload
ufw allow 8080
systemctl start tomcat
systemctl status tomcat
